{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6,
		"ecmaFeatures": {
			"jsx": true,
			"modules": true,
			"experimentalObjectRestSpread": true
		},
		"sourceType": "module"
	},
	"plugins": ["react"],
	"globals": {
		"process": "readonly"
	},
	"settings": {
		"react": {
			"createClass": "createReactClass",
			"pragma": "React",
			"version": "detect"
		},
		"linkComponents": [
			"Hyperlink",
			{
				"name": "Link",
				"linkAttribute": "to"
			}
		]
	},
	"rules": {
		"arrow-spacing": 2,
		"camelcase": [1, { "properties": "never" }],
		"indent": [2, "tab", { "SwitchCase": 1 }],
		"max-classes-per-file": 2,
		"max-depth": 2,
		"max-len": 2,
		"max-nested-callbacks": 2,
		"max-params": 2,
		"max-statements-per-line": 2,
		"no-alert": 2,
		"no-await-in-loop": 2,
		"no-console": 2,
		"no-duplicate-imports": 2,
		"no-empty-function": 2,
		"no-loop-func": 2,
		"no-mixed-spaces-and-tabs": 1,
		"no-return-await": 2,
		"no-script-url": 2,
		"no-var": 2,
		"no-undef": 2,
		"no-unused-vars": [2, { "ignoreRestSiblings": true }],
		"require-await": 2,
		"semi": [2, "always"],
		"quotes": [2, "double"],
		"react/jsx-uses-react": 2,
		"react/jsx-uses-vars": 2,
		"react/prop-types": 1
	}
}